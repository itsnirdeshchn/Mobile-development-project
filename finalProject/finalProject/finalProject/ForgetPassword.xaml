<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="finalProject.ForgetPassword">
    <ContentPage.Content>
        <StackLayout VerticalOptions="Center" HorizontalOptions="Center" WidthRequest="300">
            <Entry x:Name="resetMail" Placeholder="Email Address" Background="Transparent"/>
            <Button Text="Send Reset Link" Clicked="handleResetLink" BackgroundColor="Coral" CornerRadius="40" TextColor="AntiqueWhite"/>
            <Label Text="Check your Spam Folder if you dont receive the link." FontSize="Micro" HorizontalOptions="Center"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>